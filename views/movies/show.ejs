<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <img class="img-fluid float-left" src="<%= imgBaseUrl + 'w300/' + movie['poster_path'] %>" alt="">
        </div>
        <div class="col-md-9">
            <h2><%= movie['title'] %></h2>
            <h4><%= movie['tagline'] %></h4>

            <p><%= movie['overview'] %></p>

            <p>Duration: <%= movie['runtime'] %> min</p>
            <p>Release: <%= movie['release_date'] %></p>

            <form action="/collections?id=<%= movie['id'] %>" method="POST">
                <button class="btn btn-brown">Add to collection</button>
            </form>
        </div>
    </div>
</div>


<% include ../partials/footer %>